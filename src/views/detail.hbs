<div class="card bg-dark text-white mx-5">
  <img
    src="{{coverImage}}"
    class="card-img"
    alt="..."
    style="width:100%;height:500px;object-fit: cover;opacity: 0.6"
  />
  <div class="card-img-overlay row">
    <div class="col align-self-end">
      <div class="d-flex justify-content-center">
        <div class="card" style="max-width: 18rem;">
          <h1 class="card-title text-center text-black mx-3">{{name}}</h1>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row mx-5 mt-5">
  <div class="col">
    Column
  </div>
  <div class="col">
    <div
      id="carouselExampleAutoplaying"
      class="carousel slide"
      data-bs-ride="carousel"
    >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/Aatrox_1.jpg"
            class="d-block w-100"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/Aatrox_2.jpg"
            class="d-block w-100"
          />
        </div>
        <div class="carousel-item">
          <img
            src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/Aatrox_3.jpg"
            class="d-block w-100"
          />
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>